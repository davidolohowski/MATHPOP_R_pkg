% Please edit documentation in R/simulate_Sersic.R
\name{simulate_Sersic}
\alias{simulate_Sersic}
\title{Simulate point pattern from a given Sersic profile}
\usage{
simulate_Sersic(N, c, R_eff, e, n, theta)
}
\arguments{
\item{N}{A non-negative numeric value. Number of GCs to simulate.}

\item{c}{A vector of length two for the central location of a galaxy. The first entry is the x coordinate of the galactic center, the second entry is the y coordinate.}

\item{R_eff}{A non-negative numeric value. Half-number radius of the GC system of a galaxy.}

\item{e}{A non-negative numeric value. Aspect ratio of the GC system of a galaxy.}

\item{n}{A non-negative numeric value. Sersic index of the GC system of a galaxy.}

\item{theta}{A numeric value in (0, 2*pi). Orientation angle (in radian) of the GC system of a galaxy.}
}
\value{
A data frame with \code{N} number of row and two columns that gives the locations of the simulated point pattern.
}
\description{
Simulate point pattern from a given Sersic profile
}
\keyword{Intensity}
\keyword{Sersic}
